extends layouts/default
include helpers/mixins
include ../blocks/components/breadcrumbs/breadcrumbs.pug
include ../blocks/components/nav/nav.pug

block variables
	- const title = "Главная"
	- const name = "main-page"

block content
	.container
		h1.h1-test Адаптивный текст
		h2 Switch mode
		button.btn.switch-mode Switch
		h2 Popup
		button.btn.btn--default.btn-popup popup
		h2 Select
		include ../blocks/components/select/select.pug
		h2 Колонки
		.row
			.coll-3
				.inner
					p column
			.coll-3
				.inner
					p column
			.coll-3
				.inner
					p column
			.coll-3
				.inner
					p column
		h2 image
		.img-wrapp
			+jpg('img/1','1200','750','Горы','data:image/gif;base64,R0lGODlhCAAFAIAAAP///wAAACH5BAEAAAEALAAAAAAIAAUAAAIFjI+py1gAOw==')
		h2 Slider
		include ../blocks/components/slider/slider.pug
		h2 Table
		include ../blocks/components/table/table.pug
		h2 breadcrumbs
		+breadcrumbs(['Main page', 'News'], 'News detail')
		h2 hamburger
		include ../blocks/components/hamburger/hamburger.pug
		h2 Nav
		+nav(['Main page', 'News', 'News detail', 'page', 'page2', 'page3'])
block scripts
	script(src="js/main.js")
	script(src="js/vendor.js")